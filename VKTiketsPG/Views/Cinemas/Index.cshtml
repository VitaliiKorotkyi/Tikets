@model IEnumerable<Cinema>
@{
    ViewData["Title"] = "List of Cinemas";
}

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th>@Html.DisplayNameFor(model => model.Logo)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cinema in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <img class="rounded-circle" src="@cinema.Logo" alt="@cinema.Name" style="max-width: 150px" />
                            </td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => cinema.Name)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => cinema.Description)</td>
                            <td class="align-middle">
                                <a href="#" class="btn btn-success"><i class="bi bi-pencil-square"></i> Edit </a>
                                <a href="#" class="btn btn-info">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a href="#" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
